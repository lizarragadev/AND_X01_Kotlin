<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center">
    <Button
        android:id="@+id/btnDialogoSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogo Simple"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnDialogoConLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogo con Lista"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnDialogoConListaRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogo con Lista Radio"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnDialogoConListaCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogo con Lista Checkbox"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnDialogoPersonalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogo personalizado"
        android:layout_margin="10dp"/>

</LinearLayout>
